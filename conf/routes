# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Amigo.index

GET     /base-images                controllers.Amigo.listBaseImages
GET     /base-images/new            controllers.Amigo.newBaseImage
POST    /base-images                controllers.Amigo.createBaseImage

GET     /base-images/:id            controllers.Amigo.showBaseImage(id: BaseImageId)
GET     /base-images/:id/edit       controllers.Amigo.editBaseImage(id: BaseImageId)
POST    /base-images/:id/edit       controllers.Amigo.updateBaseImage(id: BaseImageId)

GET     /roles                      controllers.Amigo.roles

GET     /recipes                    controllers.Amigo.listRecipes
GET     /recipes/new                controllers.Amigo.newRecipe
POST    /recipes                    controllers.Amigo.createRecipe

GET     /recipes/:id                controllers.Amigo.showRecipe(id: RecipeId)
GET     /recipes/:id/edit           controllers.Amigo.editRecipe(id: RecipeId)
POST    /recipes/:id/edit           controllers.Amigo.updateRecipe(id: RecipeId)

POST    /recipes/:id/bake                               controllers.Amigo.startBaking(id: RecipeId)
GET     /recipes/:recipeId/bakes/:buildNumber           controllers.Amigo.showBake(recipeId: RecipeId, buildNumber: Int)
GET     /recipes/:recipeId/bakes/:buildNumber/events    controllers.Amigo.bakeEvents(recipeId: models.RecipeId, buildNumber: Int)

# Healthcheck
GET     /healthcheck                controllers.Amigo.healthcheck

# Auth
GET         /login                                                       controllers.Auth.login
GET         /oauth2callback                                              controllers.Auth.oauth2Callback

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
