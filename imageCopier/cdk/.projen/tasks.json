{
  "tasks": {
    "default": {
      "name": "default",
      "description": "Synthesize project files",
      "steps": [
        {
          "exec": "node .projenrc.js"
        }
      ]
    },
    "dependencies": {
      "name": "dependencies",
      "description": "Install dependencies based on lockfile e.g. during CI",
      "steps": [
        {
          "exec": "yarn install --check-files --frozen-lockfile"
        }
      ]
    },
    "diff": {
      "name": "diff",
      "description": "diff CDK stack",
      "steps": [
        {
          "exec": "cdk diff --path-metadata false --version-reporting false"
        }
      ]
    },
    "eject": {
      "name": "eject",
      "description": "Remove projen from the project",
      "env": {
        "PROJEN_EJECTING": "true"
      },
      "steps": [
        {
          "spawn": "default"
        }
      ]
    },
    "lint": {
      "name": "lint",
      "description": "Lint sources using eslint",
      "steps": [
        {
          "exec": "eslint --ext .ts --no-error-on-unmatched-pattern lib/**"
        }
      ]
    },
    "lint:fix": {
      "name": "lint:fix",
      "description": "Lint sources using eslint",
      "steps": [
        {
          "exec": "eslint --ext .ts --no-error-on-unmatched-pattern --fix lib/**"
        }
      ]
    },
    "synth": {
      "name": "synth",
      "description": "synth CDK stack(s)",
      "steps": [
        {
          "exec": "cdk synth --path-metadata false --version-reporting false"
        }
      ]
    },
    "test": {
      "name": "test",
      "description": "Run tests",
      "steps": [
        {
          "exec": "jest"
        }
      ]
    }
  },
  "env": {
    "PATH": "$(npx -c \"node -e \\\"console.log(process.env.PATH)\\\"\")"
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.js and run \"npx projen\"."
}
