{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc --noEmit",
    "watch": "tsc -w",
    "test": "jest",
    "test:dev": "jest --watch",
    "format": "prettier --write \"{lib,bin}/**/*.ts\"",
    "cdk": "cdk",
    "lint": "eslint lib/** bin/** --ext .ts --no-error-on-unmatched-pattern",
    "synth": "cdk synth --path-metadata false --version-reporting false",
    "diff": "cdk diff --path-metadata false --version-reporting false"
  },
  "devDependencies": {
    "@guardian/eslint-config-typescript": "^0.6.0",
    "@types/jest": "^26.0.20",
    "@types/node": "15.12.5",
    "aws-cdk": "2.20.0",
    "aws-cdk-lib": "2.20.0",
    "constructs": "10.0.106",
    "@guardian/cdk": "41.1.0",
    "eslint": "^7.29.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "source-map-support": "^0.5.16",
    "typescript": "~4.3.5"
  }
}
